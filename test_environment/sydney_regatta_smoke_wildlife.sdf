          <material>
            <diffuse>0.45 0.45 0.45 0.32</diffuse>
            <specular>0.1 0.1 0.1 1.0</specular>
          </material>
          <particle_scatter_ratio>0.14</particle_scatter_ratio>
        </particle_emitter>
      </link>
    </model>

    <!-- Smoke Generator D (Platypus Zone - Yellow marker) -->
    <!-- Relocated northeast, away from wildlife patrol zones -->
    <model name="smoke_generator_platypus">
      <pose>-400 280 0.5 0 0 0</pose>
      <static>true</static>
      <link name="smoke_link">
