    <!-- ============================================================================
         WIND PLUGIN (Moderate - 3 m/s base velocity from SW)
         ============================================================================

         How it works:
           Force applied = wind_velocity × coeff_vector

         Parameters:
           - wind_direction: 240° means wind blows FROM southwest (compass bearing)
           - wind_mean_velocity: Base wind speed in m/s (3.0 = light breeze)
           - coeff_vector: Drag coefficients [X, Y, Z] that scale the wind force
             - Current: .1 .1 .05 = only 10% of wind force applied (very gentle)
             - Higher values (e.g., .5 .5 .2) = stronger effect on boat
           - var_wind_gain_constants: Wind gust intensity (0 = no gusts, stable wind)
           - var_wind_time_constants: How quickly wind varies (lower = faster changes)
           - random_seed: Set to 0 for random wind each run, or fixed value for reproducibility

         To increase wind effect:
           1. Increase wind_mean_velocity (e.g., 8-10 m/s for strong wind)
           2. Increase coeff_vector values (e.g., .5 .5 .2 for more drag)
           3. Set var_wind_gain_constants > 0 for gusty conditions

         Debug topics:
           gz topic -e -t /vrx/debug/wind/speed
           gz topic -e -t /vrx/debug/wind/direction
         ============================================================================ -->
    <plugin
      filename="libUSVWind.so"
      name="vrx::USVWind">
      <wind_obj>
        <name>wamv</name>
        <link_name>wamv/base_link</link_name>
        <coeff_vector>.1 .1 .05</coeff_vector>
      </wind_obj>
      <wind_direction>240</wind_direction>
      <wind_mean_velocity>3.0</wind_mean_velocity>
      <var_wind_gain_constants>0</var_wind_gain_constants>
      <var_wind_time_constants>0.02</var_wind_time_constants>
      <random_seed>10</random_seed>
      <update_rate>10</update_rate>
      <topic_wind_speed>/vrx/debug/wind/speed</topic_wind_speed>
      <topic_wind_direction>/vrx/debug/wind/direction</topic_wind_direction>
    </plugin>

