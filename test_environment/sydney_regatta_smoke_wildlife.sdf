          <geometry><sphere><radius>0.25</radius></sphere></geometry>
          <material><ambient>0 1 1 1</ambient><diffuse>0 1 1 1</diffuse></material>
        </visual>
        <particle_emitter name="smoke_emitter" type="box">
          <emitting>true</emitting>
          <size>7 7 1</size>
          <particle_size>0.5 0.5 0.5</particle_size>
          <lifetime>160</lifetime>
          <min_velocity>0.12</min_velocity>
          <max_velocity>0.30</max_velocity>
          <rate>8</rate>
          <scale_rate>0.18</scale_rate>
          <pose>0 0 0 0.10 -1.4707 0.10</pose>
          <material>
            <diffuse>0.5 0.5 0.5 0.28</diffuse>
            <specular>0.1 0.1 0.1 1.0</specular>
          </material>
          <particle_scatter_ratio>0.11</particle_scatter_ratio>
        </particle_emitter>
      </link>
    </model>

    <!-- Smoke Generator F (Turtle Zone - Magenta marker) -->
    <!-- Relocated northeast, away from wildlife patrol zones -->
    <model name="smoke_generator_turtle">
      <pose>-440 300 0.5 0 0 0</pose>
      <static>true</static>
      <link name="smoke_link">
        <visual name="marker_visual">
          <geometry><sphere><radius>0.25</radius></sphere></geometry>
          <material><ambient>1 0 1 1</ambient><diffuse>1 0 1 1</diffuse></material>
        </visual>
        <particle_emitter name="smoke_emitter" type="box">
