    <!-- ============================================================================
         WAVE FIELD PLUGIN (Aligned with wind - 240 degrees)
         ============================================================================

         How it works:
           Publishes wave parameters to /vrx/wavefield/parameters every 2 seconds.
           All buoyant objects (boats, buoys, wildlife) subscribe to this topic
           via their <wavefield><topic>...</topic></wavefield> configuration.

         Parameters:
           - direction: Wave propagation direction in degrees (0° = North, 90° = East)
             - Current: 240° = waves come FROM southwest (aligned with wind)
             - Should match wind_direction for realistic simulation
           - gain: Wave height multiplier (0.0 = flat, 1.0 = full height)
             - Current: 0.3 = gentle waves (30% of max height)
             - Range: 0.0 (calm) to 1.0+ (stormy)
           - period: Time between wave peaks in seconds
             - Current: 5 seconds = moderate frequency
             - Lower = choppy, Higher = long swells
           - steepness: Wave sharpness (0 = smooth sine, higher = sharper peaks)
             - Current: 0 = smooth rolling waves
             - Higher values create more realistic breaking waves

         Wave conditions reference:
           Calm:    gain=0.1, period=8, steepness=0
           Moderate: gain=0.3, period=5, steepness=0
           Rough:   gain=0.6, period=4, steepness=0.5
           Storm:   gain=1.0, period=3, steepness=1.0

         Debug topic:
           gz topic -e -t /vrx/wavefield/parameters
         ============================================================================ -->
    <plugin filename="libPublisherPlugin.so" name="vrx::PublisherPlugin">
      <message type="gz.msgs.Param" topic="/vrx/wavefield/parameters"
               every="2.0">
        <!-- direction: 240° = waves from SW (aligned with wind) -->
        params {
          key: "direction"
          value {
            type: DOUBLE
            double_value: 240.0
          }
        }
        <!-- gain: wave height multiplier (0.3 = gentle, 30% of max) -->
        params {
          key: "gain"
          value {
            type: DOUBLE
            double_value: 0.3
          }
        }
        <!-- period: seconds between wave peaks (5 = moderate frequency) -->
        params {
          key: "period"
          value {
            type: DOUBLE
            double_value: 5
          }
        }
        <!-- steepness: wave sharpness (0 = smooth rolling waves) -->
        params {
          key: "steepness"
          value {
            type: DOUBLE
            double_value: 0
          }
        }
      </message>
    </plugin>

